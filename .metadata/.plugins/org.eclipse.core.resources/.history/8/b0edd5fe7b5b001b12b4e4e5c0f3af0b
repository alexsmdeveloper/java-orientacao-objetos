

public class SeguroVida implements Tributavel{
	
	private CalculadorImposto calculadorImposto;
	private int numeroApolice;
	private double premioLiquido;
	private Cliente cliente;
	
	public SeguroVida(Cliente cliente) {
		this.cliente = cliente;
		calculadorImposto = new CalculadorImposto();
	}

	@Override
	public double getValorDoImposto(double valor) {
		return calculadorImposto.calculaValor(valor);
	}

	public int getNumeroApolice() {
		return this.numeroApolice;
	}

	public void setNumeroApolice(int numeroApolice) {
		this.numeroApolice = numeroApolice;
	}

	public double getPremioLiquido() {
		return this.premioLiquido;
	}

	public void setPremioLiquido(double premioLiquido) {
		this.premioLiquido = premioLiquido;
	}
	
	public Cliente getCliente() {
		return cliente;
	}

	public void setCliente(Cliente cliente) {
		this.cliente = cliente;
	}
	
	

}
